// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       String
  img         String[]
  category    String
  subcategory String
  brand       String
  createdAt   DateTime @default(now())
}

model Category {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique 
  img         String[]
}

model Subcategory {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  category String
}

model Brand {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique 
  img  String[]
}

 

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userInfo  Json
  cartItems Json
}


model Review{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String 
  stars String 
  date DateTime @default(now()) @db.Date
}
 


model Social {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String    
  link  String
}